extends layout

block content
    style(type='text/css').
        .container{
            font-family: 'Verdana', sans-serif;
            background-color: rgba(0, 0, 0, 0.51);
            border-radius: 10px;
            color: white;
            margin-top: 30px;
        }
        h3{
            background-color: #B91D3A;
            color: white;
            padding: 5px;
        }
        .item{
            display: flex;
            justify-content: space-between;
            margin-left: 30px;
            margin-right: 30px;
        }
        .total{
            text-align: right;
            margin-right: 30px;
        }
        .total p{
            padding-top: 20px;
            padding-bottom: 20px;
        }
        button.check,
        button.edit{
            display: block;
            margin-right: auto;
            margin-left: auto;
            background-color: #B91D3A;
            color: white;
            height: 50px;
            width: 300px;
            border-radius: 10px;
            font-size: 20px;
        }

    h3=title
    div.container
        br
        div.item
            p food name
            p $10,99
        div.item
            p food name
            p $10,99

        div.total
            p Total     $21,98

    button.check() Proceed to checkout
    button.edit Edit order