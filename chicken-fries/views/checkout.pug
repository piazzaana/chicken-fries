extends layout

block content
    style(type='text/css').
        .container{
            font-family: "Verdana", sans-serif;
        }
        progress {
            display: block;
            margin-left: auto;
            margin-right: auto;
            width: 50%;
            margin-bottom: 20px;
        }
        .payment-method{
            display: flex;
            justify-content: space-around;
            margin-right: 30px;
            margin-left: 30px;
            margin-bottom: 20px;
        }
        .payment-method button{
            background-color: #B91D3A;
            color: white;
            height: 50px;
            width: 50%;
            font-size: 20px;
        }
        button.paypal{
            background-color: transparent;
            color: #B91D3A;
        }
        button.pay{
            display: block;
            margin-right: auto;
            margin-left: auto;
            background-color: #B91D3A;
            color: white;
            height: 50px;
            width: 300px;
            border-radius: 10px;
            font-size: 20px;
        }


    h1=title
    dic.container
        progress(value="50" max="100")
        div.payment-method
            button Credit Card
            button.paypal PayPal

        form
            div.form-group
                input.form-control(type="text" placeholder="Card type")
            div.form-group
                input.form-control(type="number" placeholder="Card number")
            div.form-group
                input.form-control(type="text" placeholder="Name on the card")
            div.form-group
                input.form-control(type="date" placeholder="Expiration date")
            div.form-group
                input.form-control(type="number" placeholder="CVV")

            button.pay Submit Payment