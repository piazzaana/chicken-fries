extends ../layout

block content
    h1(style="margin-bottom:50px")=title
    h2=message
    ul
        each item in favorites
            div.card(style="margin-bottom:20px;")
                div.card-header
                div.card-body
                    img(src=item.imagePath)
                    h4.card-text=item.name
                div.card-footer
                    h3(style="text-align:right;")="$"+item.price+".00"
                    a(style="color:white;float:right")(href='/users/remove-from-favorites/'+item._id) Remove from favorites