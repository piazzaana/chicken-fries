extends ../layout
block content
    h2 My Order History
    each order in orders
        div.card(style="margin-bottom:10px")
            div.card-header
            div.card-body
                ul.list-group
                    each item in order.cart.items
                        li.list-group-item.d-flex.justify-content-between.align-items-center=item.item.name
                            span="quantity "+item.qty
                            span.badge.badge-dark="$"+item.price+".00"
            div.card-footer
                h5.float-right="Total: $"+order.cart.totalPrice+".00"