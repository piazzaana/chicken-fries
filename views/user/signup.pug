extends ../layout

block content
    if hasErrors
        div.alert.alert-danger=messages
    div.card
        div.card-header
            ul
                li email must be a valid ( name@provider.com )
                li password must be at least 4 digits long
            h3 Create you account
        div.card-body
            form(method='post' action='/users/signup')
                div.form-group
                    label(for="email") Email:
                    input.form-control(id="email" type="email" name="email" required=true)
                div.form-group
                    label(for="password") Password:
                    input.form-control(id="password" type="password" name="password" required=true)
                input(type='hidden' name='_csrf' value=csrfToken)
                button(type="submit") Create Account