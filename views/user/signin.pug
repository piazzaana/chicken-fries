extends ../layout

block content
    if hasErrors
        div.alert.alert-danger=messages
    div.card
        div.card-header
            h3 Sign in to your account
        div.card-body
            form(method='post' action='/users/signin')
                div.form-group
                    label(for="email") Email:
                    input.form-control(id="email" type="email" name="email" required=true)
                div.form-group
                    label(for="password") Password:
                    input.form-control(id="password" type="password" name="password" required=true)
                input(type='hidden' name='_csrf' value=csrfToken)
                button(type="submit") Sign in
            p Don't have an account?
                a(href='/users/signup' style='color:white; margin-left:10px') Sign up